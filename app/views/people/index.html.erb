<div class="panel panel-default">
  <div class="panel-heading">Listagem de Pessoas</div>
  <div class="panel-body">
    <%= link_to 'Nova Pessoa', new_person_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>CPF/CNPJ</th>
            <th>Nome</th>
            <th>Endereco</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><%= person.name_type_person %></td>
            <td><%= person.cpf_cnpj %></td>
            <td><%= person.nome %></td>
            <td><%= person.endereco %></td>
            <td><%= link_to 'Show', person, class: "btn btn-info btn-xs" %></td>
            <td><%= link_to 'Edit', edit_person_path(person), class: "btn btn-primary btn-xs" %></td> 
            <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>

