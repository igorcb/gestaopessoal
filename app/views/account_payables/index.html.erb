<div class="panel panel-default">
  <div class="panel-heading">Listagem Contas a Pagar</div>
  <div class="panel-body">
    <%= link_to 'Nova Despesa', new_account_payable_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Person</th>
            <th>Cost center</th>
            <th>Sub cost center</th>
            <th>Sub cost center threes</th>
            <th>Data vencimento</th>
            <th>Documento</th>
            <th>Valor</th>
            <th>A Pagar</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @account_payables.each do |account_payable| %>
          <tr>
            <td><%= account_payable.person.nome %></td>
            <td><%= account_payable.cost_center.nome %></td>
            <td><%= account_payable.sub_cost_center.nome %></td>
            <td><%= account_payable.sub_cost_center_three.nome %></td>
            <td><%= date_br account_payable.data_vencimento %></td>
            <td><%= account_payable.documento %></td>
            <td><%= number_to_currency(account_payable.valor, unit: "R$ ", separator: ",", delimiter: ".") %></td>
            <td><%= number_to_currency(account_payable.saldo, unit: "R$ ", separator: ",", delimiter: ".") %></td>
            <td><%= account_payable.status_name %></td>
            <td><%= link_to 'Show', account_payable, class: "btn btn-info btn-xs" %></td>
            <td><%= link_to 'Edit', edit_account_payable_path(account_payable), class: "btn btn-primary btn-xs" %></td> 
            <td><%= link_to 'Destroy', account_payable, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
