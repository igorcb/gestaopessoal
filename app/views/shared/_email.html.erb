<fieldset class="item">

  <div class="row">
    <div class="col-xs-3">
      <%= f.collection_select :sector_id, Sector.order(:name), :id, :name, {include_blank: "Selecione o Setor"}, {class: "form-control input-sm"} %>
    </div>  

    <div class="col-xs-2">
      <%= f.text_field :contato, class: "form-control input-sm", placeholder: "Contato" %>
    </div>
    
    <div class="col-xs-3">
      <%= f.text_field :email, class: "form-control input-sm", placeholder: "e-mail" %>
    </div>

    <div class="col-xs-2">
      <%= f.text_field :observation, class: "form-control input-sm", placeholder: "Observacao" %>
    </div>


    <a href="#" class="btn btn-danger btn-sm remove" data-confirm="Are you sure?">[-] Apagar</a>
  </div> 

  <hr />

  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
  
</fieldset>
