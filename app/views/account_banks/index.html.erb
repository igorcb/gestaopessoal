<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">Listagem Contas Bancarias</div>
  <div class="panel-body">
    <%= link_to 'Novo Conta', new_account_bank_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <th>Nome</th>
          <th>Agencia</th>
          <th>Conta</th>
          <th>Tipo</th>
          <th colspan="3"></th>
        </thead>

        <tbody>
          <% @account_banks.each do |account_bank| %>
            <tr>
              <td><%= account_bank.nome %></td>
              <td><%= account_bank.agencia %></td>
              <td><%= account_bank.conta %></td>
              <td><%= account_bank.tipo %></td>
              <td><%= link_to 'Show', account_bank, class: "btn btn-info btn-xs" %></td>
              <td><%= link_to 'Edit', edit_account_bank_path(account_bank), class: "btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Destroy', account_bank, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
