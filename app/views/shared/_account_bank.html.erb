<fieldset class="item">
 
  <br > 
  <div class="form-group">
    <%= f.select(:bank_id, Bank.order("banco").collect {|b| ["#{b.banco} - ""#{b.nome}", b.id ] }, {include_blank: "Selecione o Banco"}, {class: "form-control input-sm" }) %>
  </div>
  <div class="form-group">
    <%= f.select( :tipo, [['Conta Corrente', 0], ['Conta Poupança', 1],["Conta Salário", 2]], {include_blank: "Selecione o Operação"}, {class: "form-control input-sm"} ) %>      
  </div>

  <div class="row">
    <div class="col-xs-2">
      <%= f.label :agencia %>
      <%= f.text_field :agencia, size: 10, class: "form-control input-sm", placeholder: "Agencia"  %>
    </div>
    <div class="col-xs-2">
      <%= f.label :conta_corrente %>
      <%= f.text_field :conta, size: 10, class: "form-control input-sm", placeholder: "Conta Corrente"  %>
    </div>
    <div class="col-xs-3">
      <%= f.label :cpf_cnpj %>
      <%= f.text_field :cpf_cnpj, class: "form-control input-sm", placeholder: "Cnpj ou CPF" %>
    </div>
    <div class="col-xs-4">
      <%= f.label :favorecido %>
      <%= f.text_field :favorecido, class: "form-control input-sm", placeholder: "Favorecido" %>
    </div>
    <br >
    <a href="#" class="btn btn-danger btn-sm remove" data-confirm="Are you sure?">[-] Apagar</a>
  </div>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
</fieldset>