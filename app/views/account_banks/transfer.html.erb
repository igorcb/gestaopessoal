<h1>Transferência de Valores</h1>

<%= form_tag(account_bank_tranfer_value_path) do |f| %>
		
  <div class="form-group">
		<%= label_tag :source_saldo, "Saldo" %>
		<%= text_field_tag :source_saldo, @account_bank.saldo, class: "form-control", disabled: true %>
	</div>
  <div class="form-group">
		<%= label_tag :source, "Origem" %>
		<%= text_field_tag :source, @account_bank.nome, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
		<%= label_tag :account_bank_target_id, "Destino" %>
		<%= select_tag :account_bank_target_id, options_from_collection_for_select(@accounts, :id, :nome), {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= label_tag :person_id, "Pessoa" %><br>
    <%= select_tag :person_id, options_from_collection_for_select(@persons, :id, :nome), {class: "form-control"}  %>
  </div>

  <div class="form-group">
  <%= label_tag :date_launche, "Data" %>
	<%= text_field_tag :date_launche, date_br(DateTime.current), class: "form-control datepicker" %>
  </div>

  <div class="form-group">
	<%= label_tag :price, "Valor" %>
	<%= text_field_tag :price, nil, class: "form-control moeda" %>
  </div>

  <div class="form-group">
	<%= label_tag :historic, "Historico" %>
	<%= text_field_tag :historic, nil, class: "form-control moeda" %>
  </div>

  <div class="form-group">
		<%= submit_tag("Efetuar Transferência", class: "btn btn-primary") %>
		<%= link_to 'Voltar', account_bank_path(@account_bank), class: "btn btn-default" %>
  </div>

<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      language: 'pt-BR'
    });
  });
</script>
