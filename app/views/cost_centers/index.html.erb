<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">Listagem Centro de Custo</div>
  <div class="panel-body">
    <%= link_to 'Novo Centro de Custo', new_cost_center_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @cost_centers.each do |cost_center| %>
          <tr>
            <td><%= cost_center.nome %></td>
            <td><%= link_to 'Show', cost_center, class: "btn btn-info btn-xs" %></td>
            <td><%= link_to 'Edit', edit_cost_center_path(cost_center), class: "btn btn-primary btn-xs" %></td> 
            <td><%= link_to 'Destroy', cost_center, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
