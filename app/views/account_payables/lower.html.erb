<%= render "data_account" %>

<%= form_tag({:controller => "account_payables", action: :pay}, :method => "post", :name => "make_pay") do |f| %>
<fieldset>
 
  <legend></legend>

  <div class="form-group">
    <%= label_tag :account_bank_id, "Conta Corrente" %><br>
    <%= select_tag "lower_payables[account_bank_id]", options_from_collection_for_select(@account_banks, "id", "nome"), :prompt => "Selecione uma conta", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :data_pagamento %><br>
    <%= text_field_tag "lower_payables[data_pagamento]", nil, class: "form-control datepicker" %>
  </div>

  <div class="form-group">
    <%= label_tag :valor_pago, "Valor Pago" %><br>
    <%= text_field_tag "lower_payables[valor_pago]", nil, value: @account_payable.saldo,  class: "form-control money2" %>
  </div>

  <div class="form-group">
    <%= label_tag :juros %><br>
    <%= text_field_tag "lower_payables[juros]", nil, class: "form-control money2" %>
  </div>

  <div class="form-group">
    <%= label_tag :desconto %><br>
    <%= text_field_tag "lower_payables[desconto]", nil, class: "form-control money2" %>
  </div>

  <hr />
	
  <div class="form-group">
  	<%= submit_tag("Efetuar Baixar", class: "btn btn-primary") %> 
    <%= link_to "Voltar", @account_payable, class: "btn btn-default" %> 
    <%= link_to "Listar Todos", account_payables_path, class: "btn btn-default" %> 
	</div>
	
</fieldset>


<% end %>

<%= render "payments" %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      language: 'pt-BR'
    });
  });
</script>
